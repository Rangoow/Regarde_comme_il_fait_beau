<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09C"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/weatherDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#09C"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/weatherDesc"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weatherDescription"
        android:layout_marginStart="-67dp"
        android:layout_marginBottom="-39dp"
        android:layout_toEndOf="@+id/weatherDescription"
        android:text="@string/temperatureTxt"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/temperatureUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/temperature"
        android:layout_alignEnd="@+id/temperature"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-23dp"
        android:text="@string/temperatureUnitTxt"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/weatherDescription"
        android:layout_marginTop="-59dp"
        android:layout_marginEnd="22dp"
        android:layout_toStartOf="@+id/weatherDescription"
        app:srcCompat="@drawable/ic_wi_day_sunny" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weatherDescription"
        android:layout_alignEnd="@+id/weatherDescription"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/blogger"
        android:text="@string/cityTxt"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature" />


</RelativeLayout>